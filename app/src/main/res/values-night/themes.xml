<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Instagram" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_color_primary</item>
        <item name="colorPrimaryVariant">@color/dark_color_primary_variant</item>
        <item name="colorOnPrimary">@color/dark_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_color_secondary</item>
        <item name="colorSecondaryVariant">@color/dark_color_secondary_variant</item>
        <item name="colorOnSecondary">@color/dark_background</item>
        <!-- Surface brand color. -->
        <item name="colorSurface">@color/dark_color_surface</item>
        <item name="colorSurfaceVariant">@color/dark_color_surface_variant</item>
        <item name="colorOnSurface">@color/dark_color_on_surface</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <!-- Customize your theme here. -->
<!--        <item name="fontFamily">@font/regular</item>-->
        <item name="colorAccent">@color/accent</item>
        <item name="backgroundColor">@color/dark_background</item>
        <item name="android:textColorPrimary">@color/dark_text_color_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_color_secondary</item>
        <item name="android:textColorHint">@color/dark_text_color_hint</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>